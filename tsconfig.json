{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "declaration": true,
    "composite": true
  },
  "exclude": ["./examples", "./dist"]
}