{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "declaration": true,
    "composite": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "./examples",
    "./dist"
  ]
}